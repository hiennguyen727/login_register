<body>


    <form action="/register" method="post">
        <link rel="stylesheet" href="/logininpageimbd/styles.css ">
        <img id="imdbLogo" src="https://m.media-amazon.com/images/G/01/imdb/authportal/images/www_imdb_logo._CB667618033_.png">
        <div id="registrationBox">
            <div id="newUserInfo">
                <% if (typeof errorMessage !=='undefined' ) { %>
                    <p style="color: red;">
                        <%= errorMessage %>
                    </p>
                    <% } %>
                    <div>
                            <h1>Create Account</h1>
                            <% if (typeof successMessage !=='undefined' ) { %>
                                <p style="color: green;">
                                    <%= successMessage %>
                                </p>
                                <% } %>

                                    <% { %>
                                        <label>Your Name</label> <br>
                                        <input type="text" class="blue" name="yourName" placeholder="First and last name" />
                                        <br><br>
                                        <label>Email</label> <br>
                                        <input type="email" name="email" />
                                        <br><br>
                                        <label>Username</label><br>
                                        <input type="text" name="username" />
                                        <br><br>
                                        <label>Password</label> <br>
                                        <input type="password" name="password" placeholder="at least 8 characters" />
                                        <br><br>
                                        <label>Re-password</label> <br>
                                        <input type="password" name="reenterpassword" />
                                        <br><br>

                                        <% } %>
                                        <input type="submit" class="createbtn" value="Create your IMDb account" />
                        </div>
            </div>
            <div id="submitButton">
            </div id="pie">
            <div id="apple">
                Already have an account?<a href="http://localhost:3000/login">Sign In ▸</a>
            </div>
        
        </div>
    </form>
